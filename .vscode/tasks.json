{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MQTT",
      "type": "shell",
      "command": "python app.py",
      "options": {
        "cwd": "${workspaceFolder}/mqtt"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "API Aura",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/api_aura"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Aura",
      "type": "shell",
      "command": "ng serve",
      "options": {
        "cwd": "${workspaceFolder}/aura"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Docker",
      "type": "shell",
      "command": "docker compose up -d",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Optimizaci√≥n",
      "dependsOn": [
        "Docker",
        "MQTT",
        "API Aura",
        "Aura"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Detener Docker",
      "type": "shell",
      "command": "docker compose down",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Detener Servicios",
      "type": "shell",
      "command": "taskkill /IM python.exe /F; taskkill /IM node.exe /F",
      "problemMatcher": [],
      "options": {
        "shell": {
          "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
          "args": ["-NoProfile", "-Command"]
        }
      }
    },
    {
      "label": "Detener Todo",
      "dependsOn": [
        "Detener Docker",
        "Detener Servicios"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    }
  ]
}
